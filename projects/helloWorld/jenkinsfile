pipeline {
    agent any
    stages {
        stage('Print Message') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Python installation check') {
            steps {
                sh 'python3 -V'
            }
        }
        stage('Git checkout') {
            steps {
               checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Sagar2366/LearnWithSagarBatch2.git']])
            }
        }
        stage('Install dependency') {
            steps {
                sh 'pwd'
                sh 'ls -al'
                sh 'sudo pip3 install -r projects/helloWorld/requirements.txt'
            }
        }
        stage('Run flask application') {
            steps {
                sh 'sudo python3 projects/helloWorld/app.py &'
                // sleep 100
                mail bcc: '', body: '<b>PIPELINE STATUS</b><br>Project: ${env.JOB_NAME} <br>Build Number: ${env.BUILD_NUMBER} <br> URL de build: ${env.BUILD_URL}', cc: '', from: '', replyTo: '', subject: 'Jenkins Pipeline report', to: 'getfitwithsagar2366@gmail.com'
            }
        }
    }
}
